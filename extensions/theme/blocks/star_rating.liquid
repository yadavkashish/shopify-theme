{% if request.page_type == 'product' %}
<style>
  .faq-app-wrapper {
    max-width: 800px;
    margin: 60px auto;
    padding: 0 20px;
    clear: both;
    font-family: inherit;
  }
  .faq-app-title {
    text-align: center;
    font-size: 1.8rem;
    margin-bottom: 40px;
    font-weight: 600;
  }
  .faq-app-list {
    border-top: 1px solid #e1e3e5;
  }
  .faq-app-item {
    border-bottom: 1px solid #e1e3e5;
  }
  .faq-app-details {
    padding: 0;
  }
  .faq-app-summary {
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
    font-weight: 500;
    font-size: 16px;
    cursor: pointer;
    transition: color 0.2s ease;
  }
  .faq-app-summary::-webkit-details-marker {
    display: none;
  }
  .faq-app-summary:hover {
    color: #5c5f62;
  }
  .faq-app-summary:after {
    content: '+';
    font-size: 20px;
    color: #6d7175;
    font-weight: 300;
  }
  .faq-app-details[open] .faq-app-summary:after {
    content: 'âˆ’';
  }
  .faq-app-content {
    padding: 0 0 20px 0;
    color: #5c5f62;
    line-height: 1.6;
    font-size: 15px;
    animation: faqFadeIn 0.3s ease-out;
  }
  @keyframes faqFadeIn {
    from { opacity: 0; transform: translateY(-5px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const currentProductId = "gid://shopify/Product/{{ product.id }}";
    const apiUrl = `https://themee-xi.vercel.app/api/faqs?productId=${encodeURIComponent(currentProductId)}`;

    fetch(apiUrl)
      .then(response => response.json())
      .then(data => {
        if (Object.keys(data).length === 0) return;

        // Start building the HTML
        let faqHtml = `
          <div class="faq-app-wrapper">
            <h2 class="faq-app-title">Frequently Asked Questions</h2>
            <div class="faq-app-list">
        `;

        // Flatten the grouped data to ignore the Set Titles
        Object.values(data).forEach(questions => {
          questions.forEach(q => {
            faqHtml += `
              <div class="faq-app-item">
                <details class="faq-app-details">
                  <summary class="faq-app-summary">${q.question}</summary>
                  <div class="faq-app-content">${q.answer}</div>
                </details>
              </div>
            `;
          });
        });

        faqHtml += `</div></div>`;

        // Logic to find injection point
        const target = document.querySelector('.product__info-wrapper') || 
                       document.querySelector('.product-single__meta') || 
                       document.querySelector('.product__description') ||
                       document.querySelector('#MainContent');

        if (target) {
          target.insertAdjacentHTML('afterend', faqHtml);
        }
      })
      .catch(error => console.error("FAQ App Embed Error:", error));
  });
</script>
{% endif %}

{% schema %}
{
  "name": "Auto FAQ Injector",
  "target": "body",
  "settings": []
}
{% endschema %}