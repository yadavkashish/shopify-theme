{% if request.page_type == 'product' %}
<style>
  .faq-app-full-width-section {
    width: 100%;
    margin: 80px 0;
    padding: 60px 0;
    background-color: #ffffff; /* Change this if you want a subtle background color */
    clear: both;
    display: block;
  }

  .faq-app-container {
    /* This keeps the text from hitting the very edge of the screen */
    width: 100%;
    max-width: 1200px; 
    margin: 0 auto;
    padding: 0 4%;
    box-sizing: border-box;
  }

  .faq-app-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 50px;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .faq-app-list {
    border-top: 1px solid #e1e3e5;
  }

  .faq-app-item {
    border-bottom: 1px solid #e1e3e5;
  }

  .faq-app-summary {
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25px 0;
    font-weight: 500;
    font-size: 18px;
    cursor: pointer;
  }

  .faq-app-summary::-webkit-details-marker { display: none; }

  .faq-app-summary:after {
    content: '+';
    font-size: 24px;
    color: #6d7175;
    font-weight: 300;
  }

  .faq-app-details[open] .faq-app-summary:after {
    content: 'âˆ’';
  }

  .faq-app-content {
    padding: 0 0 30px 0;
    color: #5c5f62;
    line-height: 1.8;
    font-size: 16px;
    max-width: 900px; /* Keeps the answer readable on giant screens */
    animation: faqFadeIn 0.4s ease-out;
  }

  @keyframes faqFadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const currentProductId = "gid://shopify/Product/{{ product.id }}";
    const apiUrl = `https://themee-xi.vercel.app/api/faqs?productId=${encodeURIComponent(currentProductId)}`;

    fetch(apiUrl)
      .then(response => response.json())
      .then(data => {
        if (Object.keys(data).length === 0) return;

        let faqHtml = `
          <div class="faq-app-full-width-section">
            <div class="faq-app-container">
              <h2 class="faq-app-title">Frequently Asked Questions</h2>
              <div class="faq-app-list">
        `;

        Object.values(data).forEach(questions => {
          questions.forEach(q => {
            faqHtml += `
              <div class="faq-app-item">
                <details class="faq-app-details">
                  <summary class="faq-app-summary">${q.question}</summary>
                  <div class="faq-app-content">${q.answer}</div>
                </details>
              </div>
            `;
          });
        });

        faqHtml += `</div></div></div>`;

        // To go FULL WIDTH, we inject it into the main content area 
        // rather than the product info sidebar.
        const mainArea = document.querySelector('main') || 
                         document.querySelector('#MainContent') || 
                         document.querySelector('.main-content');

        if (mainArea) {
          mainArea.insertAdjacentHTML('beforeend', faqHtml);
        }
      })
      .catch(error => console.error("FAQ App Error:", error));
  });
</script>
{% endif %}

{% schema %}
{
  "name": "Auto FAQ Injector",
  "target": "body",
  "settings": []
}
{% endschema %}