{% schema %}
{
  "name": "Product FAQs",
  "target": "body",
  "settings": []
}
{% endschema %}

<!-- The App Embed Container -->
<div id="faq-app-embedded"></div>

<style>
  /* App Container - ensuring full width & centering logic */
  #faq-app-embedded {
    width: 100%;
    margin-top: 60px;
    margin-bottom: 60px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    clear: both; /* Ensure it clears floating elements */
    display: block;
  }
  
  .faq-app-inner {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .faq-app-title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 24px;
    color: #333;
    text-align: center; 
  }

  /* 1. Classic Accordion */
  .faq-style-accordion {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .faq-item {
    border: 1px solid #e1e3e5;
    background: #fff;
    overflow: hidden;
  }
  .faq-question-btn {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 20px;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-size: 16px;
    font-weight: 600;
    color: #333;
  }
  .faq-answer {
    padding: 0 20px 20px 20px;
    color: #555;
    line-height: 1.6;
    display: none; /* Initially hidden */
  }
  .faq-item.active .faq-answer {
    display: block;
  }
  .faq-icon {
    transition: transform 0.3s ease;
  }
  .faq-item.active .faq-icon {
    transform: rotate(180deg);
  }

  /* 2. Grid (Bento) */
  .faq-style-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }
  .faq-card {
    padding: 24px;
    border: 1px solid #e1e3e5;
    background: #fff;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
  }
  .faq-card h3 {
    margin: 0 0 12px 0;
    font-size: 18px;
    font-weight: 700;
    line-height: 1.3;
  }
  .faq-card p {
    margin: 0;
    color: #555;
    font-size: 15px;
    line-height: 1.5;
  }

  /* 3. Minimal */
  .faq-style-minimal {
    border-top: 1px solid #e1e3e5;
  }
  .faq-row {
    padding: 20px 0;
    border-bottom: 1px solid #e1e3e5;
  }
  .faq-row h3 {
    margin: 0 0 8px 0;
    font-size: 17px;
    color: #202223;
    font-weight: 600;
  }
  .faq-row p {
    margin: 0;
    color: #555;
    font-size: 15px;
    line-height: 1.5;
  }

  /* 4. Chat */
  .faq-style-chat {
    border: 1px solid #e1e3e5;
    background: #f9fafb;
    height: 500px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  .chat-header {
    background: #fff;
    padding: 16px 20px;
    border-bottom: 1px solid #e1e3e5;
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .chat-body {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .chat-msg {
    padding: 10px 16px;
    font-size: 14px;
    max-width: 80%;
    line-height: 1.4;
  }
  .chat-bot {
    align-self: flex-start;
    background: #fff;
    border-radius: 0 12px 12px 12px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.05);
  }
  .chat-user {
    align-self: flex-end;
    background: rgba(255,255,255,0.6);
    border-radius: 12px 12px 0 12px;
    cursor: pointer;
  }
</style>

<script>
  (function() {
    var shopDomain = '{{ shop.permanent_domain }}';
    var productId = '{{ product.id }}';
    var productGid = 'gid://shopify/Product/' + productId;
    
    // Use app URL or Proxy if available
    var API_URL = "https://423e-2a09-bac5-3af8-1a46-00-29e-47.ngrok-free.app/api/faqs/product"; 

    function loadFaqs() {
      console.log("FAQ: Loading from", API_URL);
      fetch(API_URL + "?shop=" + shopDomain + "&productId=" + productGid, {
        headers: { "ngrok-skip-browser-warning": "true" }
      })
      .then(function(res) { return res.json(); })
      .then(function(data) {
        console.log("FAQ: Data received", data);
        if (!data || !data.faqs || data.faqs.length === 0) {
          console.log("FAQ: No questions found for this product.");
          return;
        }
        renderFaqs(data.faqs, data.config);
      })
      .catch(function(err) { console.log("FAQ App Error:", err); });
    }

    function renderFaqs(faqs, config) {
      var container = document.getElementById('faq-app-embedded');
      if (!container) return;

      // --- MOVING LOGIC: Move to Bottom ---
      // Try to find the Product Recommendations section (usually at bottom)
      var target = document.querySelector('.product-recommendations') || 
                   document.querySelector('#product-recommendations') ||
                   document.querySelector('.related-products');
      
      if (target && target.parentNode) {
        console.log("FAQ: Moving after recommendations section");
        target.parentNode.insertBefore(container, target.nextSibling);
      } else {
        // Fallback: Check for Main Content
        var main = document.querySelector('main') || document.querySelector('#MainContent');
        if (main) {
             console.log("FAQ: Appending to Main Content");
             main.appendChild(container);
        } else {
             // Fallback: Leave it where it is (body end)
             console.log("FAQ: Leaving in default position (Body end)");
        }
      }
      // ------------------------------------

      var html = '<div class="faq-app-inner">';
      html += '<h2 class="faq-app-title">Frequently Asked Questions</h2>';

      // 1. ACCORDION
      if (config.style === 'accordion') {
        html += '<div class="faq-style-accordion">';
        faqs.forEach(function(f) {
          html += '<div class="faq-item" style="border-radius:' + config.radius + 'px;">' +
                    '<button class="faq-question-btn" onclick="this.parentElement.classList.toggle(\'active\')">' +
                      '<span>' + f.question + '</span>' +
                      '<span class="faq-icon" style="color:' + config.color + ';">â–¼</span>' +
                    '</button>' +
                    '<div class="faq-answer">' + f.answer + '</div>' +
                  '</div>';
        });
        html += '</div>';
      }

      // 2. GRID (Bento)
      else if (config.style === 'grid') {
        html += '<div class="faq-style-grid">';
        faqs.forEach(function(f) {
          html += '<div class="faq-card" style="border-radius:' + config.radius + 'px; border-top: 4px solid ' + config.color + ';">' +
                    '<h3>' + f.question + '</h3>' +
                    '<p>' + f.answer + '</p>' +
                  '</div>';
        });
        html += '</div>';
      }

      // 3. MINIMAL (No + icon)
      else if (config.style === 'minimal') {
        html += '<div class="faq-style-minimal">';
        faqs.forEach(function(f) {
           html += '<div class="faq-row">' +
                     '<h3>' + f.question + '</h3>' +
                     '<p>' + f.answer + '</p>' +
                   '</div>';
        });
        html += '</div>';
      }

      // 4. CHAT
      else if (config.style === 'chat') {
        html += '<div class="faq-style-chat" style="border-radius:' + config.radius + 'px;">' +
                  '<div class="chat-header">' +
                    '<div style="width:30px; height:30px; border-radius:50%; background:' + config.color + '; color:#fff; display:flex; align-items:center; justify-content:center; font-size:12px;">AI</div>' +
                    '<span style="font-weight:600; font-size:14px;">Support Bot</span>' +
                  '</div>' +
                  '<div class="chat-body">' +
                    '<div class="chat-msg chat-bot">How can I help you today?</div>';
        faqs.forEach(function(f) {
          html += '<div class="chat-msg chat-user" style="border:1px solid ' + config.color + '; color:' + config.color + ';">' + f.question + '</div>';
        });
        html +=   '</div>' +
                '</div>';
      }

      html += '</div>'; // End inner
      container.innerHTML = html;
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadFaqs);
    } else {
      loadFaqs();
    }

  })();
</script>
